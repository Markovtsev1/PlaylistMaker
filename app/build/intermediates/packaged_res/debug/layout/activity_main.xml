<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_menu_background_color"
    android:orientation="vertical">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="@string/app_name"
        android:titleTextAppearance="@style/mainToolbarTitleText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">


        <Button
            android:id="@+id/buttonFind"
            style="@style/mainButtonStyle"
            android:layout_marginBottom="16dp"
            android:text="@string/main_find"
            app:icon="@drawable/ic_search" />

        <Button
            android:id="@+id/buttonLibrary"
            style="@style/mainButtonStyle"
            android:layout_marginBottom="16dp"
            android:text="@string/main_library"
            app:icon="@drawable/ic_library" />

        <Button
            android:id="@+id/buttonSettings"
            style="@style/mainButtonStyle"
            android:layout_marginBottom="28dp"
            android:text="@string/main_settings"
            app:icon="@drawable/ic_settings" />
    </LinearLayout>
</LinearLayout>

